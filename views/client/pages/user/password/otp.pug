extends ../../../layouts/default
include ../../../mixins/alertMessage

block main
  +alert-error(3000)
  div(class="container" style="width:500px")
    h1(class="text-center") Nhap ma OTP xac thuc
    div
      form(
        class="mt-5 d-block"
        method="post"
        action="/user/password/otp"
      )
        div(class="form-group")
          label(for="email") Email
          input(
            type="text"
            id="email"
            name="email"
            class="form-control"
            value=email
          )
        div(class="form-group")
          label(for="otp") Ma OTP
          input(
            type="text"
            id="otp"
            name="otp"
            class="form-control"
          )
        div(class="form-group mt-3")
          button(
            type="submit"
            class="btn btn-success"
          ) Xac nhan
