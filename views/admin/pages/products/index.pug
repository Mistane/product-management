extends ../.././layouts/default

block main
  h1 Danh sach san pham
  .card
    .card-body
      .card.mb-3
        .card-header Bo loc va tim kiem
        .card-body
          each item in filter
            button(
              class=item.class == "active"
                ? "btn btn-sm ml-1 btn-outline-success active"
                : "btn btn-sm ml-1 btn-outline-success"
              button-status=item.status
              ) #{item.name}
              

      table.table
        thead
          tr
            th STT
            th Hinh anh
            th Tieu de
            th Gia
            th Trang thai
            th Hanh dong
          tbody
            each product,index in products
              tr
                td #{index + 1}
                td
                  img(src=`#{product.thumbnail}`)
                td #{product.title}
                td #{product.price}$
                if product.status == "active"
                  td
                    p.text-success Hoat dong
                else
                  td
                    p.text-danger Dung hoat dong
                td
                  button.btn.btn-sm.btn-warning Sua
                  button.btn.btn-sm.btn-danger Xoa
                
          
