extends ../.././layouts/default
include ../.././mixins/alertMessage.pug
include ../.././mixins/selectTree.pug

block main
  if(permissions.includes("product_create"))
    alert-error(5000) 
    
    h1(class="mb-4") Them moi san pham
    form(
      method="post"
      action=`${prefixAdmin}/products/create`
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="title") Tieu de
        input(
          class="form-control"
          id="title"
          type="text"
          name="title"
        )
      div(class="form-group")
        label(for="parent_id") Danh muc cha
        select(
          class="form-control"
          id="parent_id"
          type="text"
          name="parent_id"
        )
          option(value="" disabled selected) --Chon danh muc cha--
          +select-tree(records)
      div(class="form-group")
        label(for="desc") Mo ta
        textarea(
          class="form-control textarea-tinymce"
          id="desc"
          rows="5"
          name="description"
        )
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="featured"
          name="featured"
          value="1"
        )
        label(for="featured" class="form-check-label") Noi bat
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="featured1"
          name="featured"
          value="0"
          checked
        )
        label(for="featured1" class="form-check-label") Khong noi bat
      div(class="form-group")
        label(for="price") Gia
        input(
          class="form-control"
          id="price"
          type="number"
          value="0"
          min="0"
          name="price"
        )
      div(class="form-group")
        label(for="discount") % Giam gia
        input(
          class="form-control"
          id="discount"
          type="number"
          name="discountPercentage"
          value="0"
          min="0"
        )
      div(class="form-group")
        label(for="stock") So luong
        input(
          class="form-control"
          id="stock"
          type="number"
          value="0"
          min="0"
          name="stock"
        )
      div(class="form-group")
        label(for="img") Anh
        input(
          class="form-control"
          id="img"
          type="file"
          name="thumbnail"
          preview-image-input
        )
        div(class="mt-4")
          img(
            src=""
            preview-image
            style="width: 200px; height: auto"
          )
      div(class="form-group")
        label(for="position") Vi tri
        input(
          class="form-control"
          id="position"
          type="number"
          name="position"
          min="1"
          placeholder="Tu dong tang"
        )
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked
        )
        label(for="statusActive" class="form-check-label") Hoat dong
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
        )
        label(for="statusInActive" class="form-check-label") Dung hoat dong
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-success"
        ) Gui
  else
    h1 Ban khong co quyen truy cap
  <script type="application/javascript" src= "/tinymce/tinymce.min.js"></script>
  <script type="application/javascript" src= "/admin/js/my-tinymce-config.js"></script>
