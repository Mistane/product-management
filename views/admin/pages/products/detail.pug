doctype html
html
  head
    title #{pageTitle}
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB' crossorigin='anonymous')

  body
    .container.mt-5
      if(product.title)
        h1 #{product.title}

      if(product.price)
        p Gia : #{product.price}$

      if(product.discountPercentage)
        p Giam gia: #{product.discountPercentage}%

      if(product.stock)
        p Con lai: #{product.stock}

      if(product.thumbnail)
        img(src=product.thumbnail style="width: 100px")
      
      if(product.status)
        if(product.status == "active")
          p Trang thai 
          button(class="btn btn-success") Dang hoat dong
        if(product.status == "inactive")
          p Trang thai 
          button(class="btn btn-danger") Dung hoat dong
      
      if(product.position)
        p Vi tri #{product.position}

      if(product.description)
        p !{product.description}
      script(src="/admin/js/script.js")
