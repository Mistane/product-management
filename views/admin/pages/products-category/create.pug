extends ../.././layouts/default
include ../.././mixins/alertMessage.pug
include ../.././mixins/selectTree.pug

block main
  alert-error(5000) 
  
  h1(class="mb-4") Them moi danh muc
  form(
    method="post"
    action=`${prefixAdmin}/products-category/create`
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="title") Tieu de
      input(
        class="form-control"
        id="title"
        type="text"
        name="title"
      )
    div(class="form-group")
      label(for="parent_id") Danh muc cha
      select(
        class="form-control"
        id="parent_id"
        type="text"
        name="parent_id"
      )
        option(value="" disabled selected) --Chon danh muc cha--
        +select-tree(records)
    div(class="form-group")
      label(for="desc") Mo ta
      textarea(
        class="form-control textarea-tinymce"
        id="desc"
        rows="5"
        name="description"
      )
    div(class="form-group")
      label(for="img") Anh
      input(
        class="form-control"
        id="img"
        type="file"
        name="thumbnail"
        preview-image-input
      )
      div(class="mt-4")
        img(
          src=""
          preview-image
          style="width: 200px; height: auto"
        )
    div(class="form-group")
      label(for="position") Vi tri
      input(
        class="form-control"
        id="position"
        type="number"
        name="position"
        min="1"
        placeholder="Tu dong tang"
      )
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      label(for="statusActive" class="form-check-label") Hoat dong
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
      )
      label(for="statusInActive" class="form-check-label") Dung hoat dong
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-success"
      ) Gui
  <script type="application/javascript" src= "/tinymce/tinymce.min.js"></script>
  <script type="application/javascript" src= "/admin/js/my-tinymce-config.js"></script>
