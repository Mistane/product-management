extends ../.././layouts/default
include ../.././mixins/filterStatus
include ../.././mixins/search
include ../.././mixins/pagination
include ../.././mixins/formChangeMulti
include ../.././mixins/alertMessage
include ../.././mixins/sort
include ../.././mixins/productCategoryTitleTree

block main
  +alert-success(5000)
  +alert-error(5000)
  h1 Danh muc san pham pham
  .card
    .card-body
      .card.mb-3
        .row
          .col-6
            +filter-status(filterStatus)
          .col-6
            +search(keyword)
      .row
        .col-8
          +form-change-multi(`${prefixAdmin}/products-category/change-multi?_method=PATCH`)
        .col-4
          a(
            class="btn btn-outline-success"
            href=`${prefixAdmin}/products-category/create`
          ) + Them moi
                  
      +sort()
      table.table
        thead
          tr
            th
              input(type="checkbox" name="checkall")
            th STT
            th Hinh anh
            th Tieu de
            th Vi tri
            th Trang thai
            th Hanh dong
          tbody
            +title-tree(records)

    form(
      action=""
      method="POST"
      id="form-change-status"
      data-path=`${prefixAdmin}/products-category/change-status`
    )

    form(
      action=""
      method="POST"
      id="form-delete-product"
      data-path=`${prefixAdmin}/products-category/delete`
    )
  script(src="/admin/js/products-category.js")
