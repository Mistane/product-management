mixin select-tree(records, level = 1, parentId = "")
  - const prefix = new Array(level + 1).join("-- ")

  for item in records
    option(
      value=item.id
      selected = item.id == parentId ? true : false
    ) #{prefix}#{item.title}
    if item.children
      +select-tree(item.children, level + 1, parentId)
