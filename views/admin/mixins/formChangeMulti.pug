mixin form-change-multi(path)
    form(
      action=path
      id="form-change-multi"
      method="POST"
    )
      .d-flex.aligns-item-start
        .form-group
          select(name="type" id="select-options" class="form-control")
            option(selected disabled) ---lua chon---
            option(value="active") Hoat dong
            option(value="inactive") Dung hoat dong
            option(value="delete-all") Xoa tat ca
        .form-group
          input(
            name="ids"
            value=""
            class="form-control d-none"
            type="text"
          )
        button(type="submit" class="btn btn-primary") Ap dung
